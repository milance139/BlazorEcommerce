@page "/profile"
@inject IAuthService AuthService
@attribute [Authorize]

<AuthorizeView>
    <h3>You are logged in as: <i>@context.User.Identity.Name</i></h3>
</AuthorizeView>

<h5>Change password</h5>

<EditForm Model="requestModel" OnInvalidSubmit="ChangePassword">
    <DataAnnotationsValidator />
    <div class="mb-3">
        <label for="password">New Password</label>
        <InputText id="password" @bind-Value="requestModel.Password" class="form-control" type="password"></InputText>
        <ValidationMessage For="() => requestModel.Password" />
    </div>
    <div class="mb-3">
        <label for="confirmPassword">Email</label>
        <InputText id="confirmPassword" @bind-Value="requestModel.ConfirmPassword" class="form-control" type="password"></InputText>
        <ValidationMessage For="() => requestModel.ConfirmPassword" />
    </div>
    <button type="submit" class="btn btn-primary">Change password</button>
    <div class="@messageCssClass mt-2">
        <span>@message</span>
    </div>
</EditForm>