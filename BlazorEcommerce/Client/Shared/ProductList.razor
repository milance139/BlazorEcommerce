@inject IProductService ProductService
@implements IDisposable

@if(ProductService.Products == null || ProductService.Products.Count == 0)
{
    <span>@ProductService.Message</span>
}
else
{
    <h3>Products list</h3>

    <ul class="list-unstyled">
        @foreach (var product in ProductService.Products)
        {
            <li class="media my-3">
                <div class="media-img-wrapper mr-2">
                    <a href="/product/@product.Id">
                        <img class="media-img" src="@product.ImageURL" alt="@product.Title"/>
                    </a>
                </div>
                <div class="media-body">
                    <a href="/product/@product.Id">
                        <h4 class="mb-0">@product.Title</h4>
                    </a>
                    <p>@product.Description</p>
                    <h5 class="price"> 
                        @GetPriceText(product)
                    </h5>
                </div>
            </li>
        }
    </ul>
    <div class="paggination">
        @if (ProductService.Paggination.CurrentPage != 1)
        {
            <button class="btn btn-outline-info page-selection"
                    @onclick="() => ChangePage(ProductService.Paggination.CurrentPage - 1)">
                Previous
            </button>
        }
        @for (int i = 1; i <= ProductService.Paggination.TotalPages; i++)
        {
            int temp = i;
            <button class="btn
                        @(i == ProductService.Paggination.CurrentPage ? "btn-info" : "btn-outline-info")
                        page-selection"
                        @onclick="() => ChangePage(temp)">
                @i
            </button>
        }
        @if (ProductService.Paggination.CurrentPage != ProductService.Paggination.TotalPages && ProductService.Paggination.TotalPages > 1)
        {
            <button class="btn btn-outline-info page-selection"
                    @onclick="() => ChangePage(ProductService.Paggination.CurrentPage + 1)">
                Next
            </button>
        }
    </div>
}
